{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022" /* Modern output matching supported Node LTS features. */,
    "lib": ["ES2023"] /* Latest stable lib for newer built-ins. */,
    "module": "NodeNext" /* Align with Node ESM/CJS resolution rules. */,
    "moduleResolution": "NodeNext",
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,

    /* Emit */
    "declaration": true /* Emit .d.ts for library consumers. */,
    "declarationMap": true /* Sourcemaps for declarations (better editor nav). */,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist" /* Build output folder. */,
    "rootDir": "src" /* Ensures relative paths are consistent. */,
    "removeComments": false,
    "newLine": "lf",

    /* Type Checking Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true /* Avoid TS inserting synthetic exports; preserves ESM shape. */,
    "jsx": "react-jsx",

    /* Interop & Module Hygiene */
    "esModuleInterop": true /* Smooth default import of CJS deps. */,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true /* Faster builds; safe for published libs usually. */,
    "noEmitOnError": true,

    /* Project Layout */
    "types": ["node", "vitest"] /* Include Node + Vitest globals for tests. */,
    "incremental": false /* Speeds up subsequent builds (creates .tsbuildinfo). */
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
