{
  "name": "kg1",
  "version": "0.0.0-dev.2",
  "description": "A knowledge graph CLI for personal knowledge management",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "kg": "dist/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "kg": "tsx --env-file=.env src/main.ts",
    "build": "tsc && tsx scripts/post-build.ts",
    "build:prod": "tsc -p tsconfig.production.json && tsx scripts/post-build.ts",
    "build:clean": "rm -rf dist && pnpm build",
    "build:clean:prod": "rm -rf dist && pnpm build:prod",
    "test": "vitest",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build:clean:prod && pnpm typecheck && pnpm test run",
    "repomix": "pnpx repomix --include 'src/**/*,AGENTS.md,README.md'",
    "cli:link": "npm link",
    "cli:unlink": "npm unlink -g kg1-cli",
    "site:build": "pnpm run build && node dist/main.js publish",
    "site:serve": "pnpx serve public",
    "site:deploy": "dotenvx run -- pnpx vercel deploy public --prod --yes",
    "db:reset": "rm -f local.db && dotenvx run -- drizzle-kit migrate",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "dotenvx run -- drizzle-kit migrate",
    "db:studio": "dotenvx run -- drizzle-kit studio"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "dependencies": {
    "@inquirer/prompts": "7.8.4",
    "@libsql/client": "0.15.12",
    "@mozilla/readability": "0.6.0",
    "ajv": "8.17.1",
    "commander": "14.0.0",
    "drizzle-orm": "0.44.5",
    "inquirer-autocomplete-standalone": "0.8.1",
    "jsdom": "26.1.0",
    "marked": "16.2.0",
    "ollama": "0.5.17",
    "turndown": "7.2.1"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.49.0",
    "@types/jsdom": "21.1.7",
    "@types/node": "24.2.1",
    "drizzle-kit": "0.31.4",
    "prettier": "3.6.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
