{
  "name": "@kg/v1",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "cli": "tsx src/main.ts",
    "test": "vitest",
    "repomix": "pnpx repomix --ignore 'public/**/*,docs/**/*.md,LICENSE,pnpm-lock.yaml'",
    "site:build": "pnpm run build && node dist/main.js publish",
    "site:deploy": "dotenvx run -- pnpx vercel deploy public --prod --yes",
    "db:reset": "rm -f local.db && dotenvx run -- drizzle-kit push",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "dotenvx run -- drizzle-kit migrate",
    "db:studio": "dotenvx run -- drizzle-kit studio"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@inquirer/prompts": "7.8.3",
    "@libsql/client": "0.15.12",
    "ajv": "8.17.1",
    "commander": "14.0.0",
    "drizzle-orm": "0.44.4",
    "inquirer-autocomplete-standalone": "0.8.1"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.49.0",
    "@types/node": "24.2.1",
    "drizzle-kit": "0.31.4",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
